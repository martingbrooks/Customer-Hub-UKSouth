{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "topLevelAggregator": {
      "defaultValue": "tla",
      "type": "string"
    },
    "thirdOctectNumber": {
      "defaultValue": "0",
      "type": "string"
    },
    "resourceLocation": {
      "defaultValue": "null",
      "type": "string"
    },
    "environment": {
      "defaultValue": "null",
      "type": "string"
    }
  },
  "variables": {
    "resourceGroups": [
      "[concat('rg-',parameters('topLevelAggregator'),'-network-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-monitor-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-tpa1-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-tpa2-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-tpa3-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-firewallinside-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-firewalloutside-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]",
      "[concat('rg-',parameters('topLevelAggregator'),'-firewalltransit-',parameters('environment'),'-',parameters('resourceLocation'),'-001')]"
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('resourceLocation')]",
      "name": "[variables('resourceGroups')[copyIndex()]]",
      "properties": {},
      "copy": {
        "name": "rgl",
        "count": "[length(variables('resourceGroups'))]"
      }
    }
  ],

  "outputs": {}
}